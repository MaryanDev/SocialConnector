@using SocialConnector.Models.UserProfile
@model SocialConnector.Models.UserProfile.UserProfileModel

<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
    <div class="w3-row">
        <div class="w3-col m3">
            @await Component.InvokeAsync("ProfileMainComponent", new { userProfile = Model })

            @await Component.InvokeAsync("ProfileAccordionComponent", new { userProfile = Model })

            @await Component.InvokeAsync("InterestsComponent", new { userProfile = Model })

            @{Html.RenderPartial("Partials/LeftAlertBox");}
        </div>

        <div class="w3-col m7">

            @{Html.RenderPartial("Partials/PostBox", new AddWallPostViewModel { Id = Model.Id, IsMyPage = Model.IsMyPage, FirstName = Model.FirstName });}

            @*@{Html.RenderPartial("Partials/WallPost_ImagesAndText");}

                @{Html.RenderPartial("Partials/WallPost_Text");}*@

            @*@{Html.RenderPartial("Partials/WallPost_BigImage");}*@

            @await Component.InvokeAsync("WallComponent", new { userProfile = Model })

        </div>

        <div class="w3-col m2">
            @{Html.RenderPartial("Partials/UpcomingEvents");}

            @{Html.RenderPartial("Partials/FriendsRequest");}

            <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
                <p>ADS</p>
            </div>
        </div>
    </div>
</div>
@section Footer{
    @{
        Html.RenderPartial("Footer");
    }
}