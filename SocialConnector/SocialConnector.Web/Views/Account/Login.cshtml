@model SocialConnector.Models.Security.LoginModel


<div class="row">
    <div class="col-md-push-4 col-md-4 col-sm-4 col-sm-push-4 col-xs-8 col-xs-push-2 col-lg-4 col-lg-push-4 login-form">
        <h4 class="text-center">Login</h4>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center row">
                <div class="col-lg-4 col-md-4">
                    <label asp-for="LoginName" class="control-label"></label>
                </div>
                <div class="col-lg-8 col-md-8">
                    <input asp-for="LoginName" class="form-control" />
                    <span asp-validation-for="LoginName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center row">
                <div class="col-lg-4 col-md-4">
                    <label asp-for="Password" class="control-label"></label>
                </div>
                <div class="col-lg-8 col-md-8">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
        <div class="text-center">
            <p>Not registered yet?<a asp-action="Register">Create an account</a></p>
        </div>
    </div>
</div>


@section FootScripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
