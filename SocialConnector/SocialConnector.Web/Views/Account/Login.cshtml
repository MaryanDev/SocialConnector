@model SocialConnector.Models.Security.LoginModel


<div class="row">
    <div class="col-md-push-5 col-md-2 account-form">
        <h4 class="text-center">Login</h4>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control"/>
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Login" class="btn btn-success"/>
            </div>
        </form>
        <div class="text-center">
            <p>Not registered yet?<a asp-action="Register">Create an account</a></p>
        </div>
    </div>
</div>


@section FootScripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
